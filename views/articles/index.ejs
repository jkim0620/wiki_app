<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head.ejs %>
  </head>
  <body>

    <%- include ./partials/hide-nav.ejs %>

    <div class="container">
      <section class="section-articles">
          <select class="select-category" name="articles[category]" onChange="window.location.href=this.value">
            <option value="/articles/">Show All</option>
            <% categories.forEach((cat) => { %>
            <option value="/articles/?category=<%= cat.category %>" <%= category === cat.category ? "selected" : "" %>><%= cat.category %></option>
            <% }); %>
          </select>
        <div class="row">
          <% articles.forEach((article) => { %>
          <div class="content-container">
            <div class="col s12 m6 l4">
              <div class="article-box">
                <div class="img-box">
                  <a href="/articles/<%= article.id %>"><img src="<%= article.img_url %>"></a>
                </div> <!-- /img-box -->
                <div class="text-box">
                  <p class="category-font"><%= article.category %></p>
                  <a href="/articles/<%= article.id %>"><p class="title-font"><%= article.title %></p></a>
                  <p class="author-font"><%= article.author %></p>
                  <p class="date-font"><%= article.date_created %></p>
                  <!-- <div class="icon-circle">
                    <a class="link-font" href="/articles/<%= article.id %>"><i class="fa fa-arrow-right fa-1x icon-color" aria-hidden="true"></i></a>
                  </div> -->
                </div> <!-- /text-box -->
              </div> <!-- /article-box -->
            </div> <!-- /col -->
          </div> <!-- /content-container -->
          <% }); %>
        </div> <!-- /row -->
      </section> <!-- /article section -->
    </div> <!-- /container -->

    <%- include ./partials/footer.ejs %>

  </body>
</html>
