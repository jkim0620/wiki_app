<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head.ejs %>
  </head>
  <body>

    <%- include ./partials/nav.ejs %>

    <div class="container">
      <section class="section-articles">
        <select class="select-category" name="articles[category]" onChange="window.location.href=this.value">
          <option value="/articles/">Show All</option>

          <% categories.forEach((cat) => { %>
            <option value="/articles/?category=<%= cat.category %>" <%= category === cat.category ? "selected" : "" %>><%= cat.category %></option>
          <% }); %>
        </select>
        <div class="row">
          <% articles.forEach((article) => { %>
          <div class="content-container">
            <div class="col s4">
              <div class="article-box">
                <div class="img-box">
                  <img src="<%= article.img_url %>">
                </div> <!-- /img-box -->
                <div class="text-box">
                  <p class="category-font"><%= article.category %></p>
                  <p class="title-font"><%= article.title %></p>
                  <p class="author-font"><%= article.author %></p>
                  <p class="date-font"><%= article.date_created %></p>
                  <div class="icon-circle">
                    <a class="link-font" href="/articles/<%= article.id %>"><i class="fa fa-arrow-right fa-1x icon-color" aria-hidden="true"></i></a>
                  </div>
                </div> <!-- /text-box -->
              </div> <!-- /article-box -->
            </div> <!-- /col -->
          </div> <!-- /content-container -->
          <% }); %>
        </div> <!-- /row -->
      </section> <!-- /article section -->
    </div> <!-- /container -->

    <section class="footer-section">
      <div class="container">
        <select class="category-footer" name="articles[category]" onChange="window.location.href=this.value">
          <option value="/articles/">Category</option>
          <option value="/articles/?category=Culture">Culture</option>
          <option value="/articles/?category=Art+and+Design">Art and Design</option>
          <option value="/articles/?category=Architecture">Architecture</option>
          <option value="/articles/?category=People">People</option>
          <option value="/articles/">Show All</option>
        </select>
        <div class="footer-content-container">
          <a href="/articles/new"><button class="new-form-link-footer" type="button" name="button">Add New +</button></a>
          <p class="copyright"><i class="fa fa-copyright fa-1x" aria-hidden="true"></i> Julia Kim</p>
        </div>
      </div> <!-- /container -->
    </section>

  </body>
</html>
