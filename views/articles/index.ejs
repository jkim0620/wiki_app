<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head.ejs %>
  </head>
  <body>

    <section class="nav">
      <div class="container">
        <div class="row">
          <div class="col s3">
            <h1>HOME PAGE</h1>
          </div>
          <div class="col s3 push-s3">
            <select class="" name="articles[category]" onChange="window.location.href=this.value">
              <option value="http://localhost:3000/articles/">Select Category</option>
              <option value="http://localhost:3000/articles/?category=Culture">Culture</option>
              <option value="http://localhost:3000/articles/?category=Art+and+Design">Art and Design</option>
              <option value="http://localhost:3000/articles/?category=Architecture">Architecture</option>
              <option value="http://localhost:3000/articles/?category=People">People</option>
              <option value="http://localhost:3000/articles/">Show All</option>
            </select>
          </div>
          <div class="col s3 push-s6">
            <a class="" href="/articles/new">+</a>
          </div>
<!--
          <nav class=top-nav>

            <a href="#" data-activates="nav-mobile" class="button-collapse top-nav full hide-on-large-only"><i class="material-icons">menu</i></a>
          </nav> -->
        </div>
      </div>
    </section>

    <div class="container">
      <section class="section-articles">
        <div class="row">
          <% articles.forEach((article) => { %>
          <div class="content-container">
            <div class="col s4">
              <div class="img-box">
                <img src="<%= article.img_url %>">
              </div>
            <!-- </div> -->
            <!-- <div class="col s6"> -->
              <div class="text-box">
                <p class="category-font"><%= article.category %></p>
                <p class="title-font"><%= article.title %></p>
                <p class="author-font"><%= article.author %></p>
                <p class="date-font"><%= article.date_created %></p>
                <!-- <p class="content-font"><%= article.content %></p> -->
                <div class="icon-circle">
                  <a class="link-font" href="http://localhost:3000/articles/<%= article.id %>"><i class="fa fa-arrow-right fa-2x icon-color" aria-hidden="true"></i></a>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>

      </section>
    </div>

  </body>
</html>
